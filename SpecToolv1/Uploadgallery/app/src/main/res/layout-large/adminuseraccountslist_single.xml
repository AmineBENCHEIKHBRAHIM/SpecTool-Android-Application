<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="5dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/listadminusernametext"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupation"
        android:textSize="14sp"
        android:id="@+id/listadminoccupationtext"
        android:layout_below="@+id/listadminusernametext"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/listadminusernametext" />

    <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:id="@+id/adminremoveuserimage"
        android:src="@drawable/delete"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:onClick="removeUserOnClickHandler"
        android:layout_marginEnd="15dp"
        />


</RelativeLayout>