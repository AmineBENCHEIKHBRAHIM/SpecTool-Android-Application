<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.neopterix.uploadgallery" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="22" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="thefinal.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="thefinal.ProfileActivity"
            android:windowSoftInputMode="adjustNothing"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:parentActivityName="thefinal.MainActivity">

        </activity>
        <activity android:name="thefinal.AdminProfileActivity"
            android:theme="@style/Base.ThemeOverlay.AppCompat.ActionBar"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:parentActivityName="thefinal.MainActivity">

        </activity>
        <activity android:name="thefinal.ProfileSettings"
            android:label="@string/action_settings"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity android:name="thefinal.NewVideoActivity"
            android:label="@string/newvideo"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name="thefinal.VideoRecordingActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:parentActivityName="thefinal.NewVideoActivity">

        </activity>
        <activity android:name="thefinal.VideoPresentationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:parentActivityName="thefinal.ProfileActivity">

        </activity>
        <activity android:name="thefinal.VideoActivity2"
            android:label="Sequence"
            android:screenOrientation="landscape"
            android:parentActivityName="thefinal.ProfileActivity">

        </activity>
        <service
            android:name="com.serenegiant.service.ScreenRecorderService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>
